<Window x:Class="taskflowDesktop.Views.NovoChamado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chamados" Height="800" Width="1366">

    <Grid>
        <!-- CAMADA 1 - Tela principal -->
        <Grid>
            <Button Content="Novo Chamado"
                    Width="150" Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0"
                    Click="AbrirModal_Click"/>
            <!-- Aqui ficaria a tabela de chamados -->
        </Grid>

        <!-- CAMADA 2 - Overlay + Modal -->
        <Grid x:Name="ModalOverlay"
              Background="#AA000000"  
            Visibility="Collapsed">

            <!-- Caixa branca central (o "modal") -->
            <Border Background="White"
                    CornerRadius="15"
                    Padding="30"
                    Width="800"
                    Height="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{DynamicResource MaterialDesignElevation5}">

                <StackPanel>
                    <TextBlock Text="Novo Chamado"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="5">
                            <TextBlock Text="Título do Chamado" />
                            <TextBox Height="35" Margin="0,5,0,10"/>

                            <TextBlock Text="Status" />
                            <TextBox Height="35" Margin="0,5,0,10"/>

                            <TextBlock Text="Data de Abertura" />
                            <DatePicker Height="35" Margin="0,5,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5">
                            <TextBlock Text="Setor" />
                            <TextBox Height="35" Margin="0,5,0,10"/>

                            <TextBlock Text="Prioridade" />
                            <ComboBox Height="35" Margin="0,5,0,10">
                                <ComboBoxItem Content="Baixa"/>
                                <ComboBoxItem Content="Média"/>
                                <ComboBoxItem Content="Alta"/>
                            </ComboBox>

                            <TextBlock Text="Data de Finalização" />
                            <DatePicker Height="35" Margin="0,5,0,10"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Descrição" />
                    <TextBox Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Margin="0,5,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar"
                                Width="100"
                                Height="35"
                                Margin="0,0,10,0"
                                Click="FecharModal_Click"/>
                        <Button Content="Publicar"
                                Width="100"
                                Height="35"
                                Background="Black"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
