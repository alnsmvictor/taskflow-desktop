<Window x:Class="taskflowDesktop.Views.Usuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Usuários - TaskFlow" WindowStartupLocation="CenterScreen"
        WindowState="Maximized" Background="#F5F5F5" WindowStyle="None"
        x:Name="UsuariosWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="Sidebar" Background="#222">
            <StackPanel>
                <Button Content="☰" FontSize="18" Foreground="White" Background="Transparent" BorderBrush="{x:Null}" Padding="10" HorizontalAlignment="Left"/>
                <TextBlock Text="TaskFlow" Foreground="White" FontSize="22" FontWeight="Bold" Margin="20,10,0,30"/>
                <Button Content="📄 Chamados" Foreground="White" Background="Transparent" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="20,5" Click="BtnChamados_Click"/>
                <Button Content="👤 Usuários" Foreground="White" Background="Transparent" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="20,5"/>
                <Button Content="⚙️ Configurações" Foreground="White" Background="Transparent" BorderBrush="{x:Null}" HorizontalAlignment="Left" Margin="20,5" Click="BtnConfiguracoes_Click"/>
            </StackPanel>
        </Border>

        <!-- Conteúdo principal -->
        <Grid Grid.Column="1" Margin="40,30,40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Topbar -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <Border Width="337" 
                    Height="57" 
                    Background="White"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,10,0" 
                    DockPanel.Dock="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ícone de busca -->
                        <materialDesign:PackIcon Kind="Magnify" 
                                    Width="20" 
                                    Height="20" 
                                    Foreground="#666" 
                                    VerticalAlignment="Center"
                                    Margin="10,0"/>

                        <!-- Campo de texto -->
                        <TextBox Grid.Column="1"
                        x:Name="BuscarTextBox"
                        Background="Transparent"
                        BorderThickness="0"
                        materialDesign:HintAssist.Hint="Buscar usuários..."
                        materialDesign:HintAssist.IsFloating="True"
                        materialDesign:HintAssist.FloatingScale="0.8"
                        Padding="5,0,10,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        TextChanged="BuscarTextBox_TextChanged" Margin="0,12,19,13"/>
                    </Grid>
                </Border>

                <!-- Ícone de usuário -->
                <Button Width="90" Height="64" Background="Transparent" BorderBrush="{x:Null}" DockPanel.Dock="Right" Cursor="Hand" Click="BtnPerfil_Click">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="58" Height="60" Foreground="#333"/>
                </Button>
            </DockPanel>

            <!-- Título -->
            <Grid Grid.Row="1" Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="USUÁRIOS" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                Content="+ Novo Usuário"
                Height="40"
                Background="#2979FF"
                Foreground="White"
                Padding="20,8"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                Click="NovoUsuario_Click"
                x:Name="NovoUsuarioButton"/>
            </Grid>

            <!-- Tabs -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="BtnTodosUsuarios" 
                    Content="Todos os Usuários" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="#000" 
                    FontWeight="Bold" 
                    Margin="0,0,20,0"
                    Click="BtnTodosUsuarios_Click"/>
                <Button x:Name="BtnUsuariosAtivos" 
                    Content="Usuários Ativos" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="#777"
                    Click="BtnUsuariosAtivos_Click"/>
            </StackPanel>
            <Border Grid.Row="2" Margin="0,30,0,0" BorderBrush="#DDD" BorderThickness="0,0,0,1"/>

            <!-- Linha de filtros -->
            <Grid Grid.Row="3" Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botão remover -->
                <Button Content="Remover" 
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Grid.Column="0" 
                Margin="0,20,10,4" 
                Click="RemoverUsuario_Click"
                Foreground="#F44336"
                BorderBrush="#F44336"
                x:Name="RemoverUsuarioButton"/>

                <!-- Filtro de Perfil -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Perfil" FontWeight="Bold" Foreground="#555" Margin="2,0,0,3"/>
                    <ComboBox x:Name="FiltroPerfilComboBox"
                      Width="140" 
                      Height="33"
                      Padding="8"
                      SelectedValuePath="Content"
                      SelectionChanged="FiltroPerfilComboBox_SelectionChanged"
                      BorderBrush="#DDD"
                      BorderThickness="1"
                      Background="White">
                        <ComboBoxItem Content="Todos os perfis" IsSelected="True"/>
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Técnico"/>
                        <ComboBoxItem Content="Usuário"/>
                    </ComboBox>
                </StackPanel>

                <!-- Botão Limpar Filtros -->
                <Button Content="Limpar Filtros" 
                Grid.Column="2" 
                Margin="10,20,0,4" 
                Click="LimparFiltros_Click"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Foreground="#666"
                BorderBrush="#666"/>
            </Grid>

 

            <!-- Cards -->
            <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CardsStackPanel" Orientation="Vertical">
                    <!-- Os cards serão gerados dinamicamente -->
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Modal Novo/Editar Usuário -->
        <Grid x:Name="ModalUsuario"
          Background="#AA000000"
          Visibility="Collapsed"
          Grid.ColumnSpan="2"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Panel.ZIndex="10">

            <Border Background="White"
            CornerRadius="12"
            Padding="30"
            Width="600"
            MaxHeight="700"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

                <StackPanel>
                    <TextBlock x:Name="ModalTitulo"
                       Text="Novo Usuário"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,25"/>

                    <!-- GRID PRINCIPAL -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Nome -->
                            <RowDefinition Height="Auto"/>
                            <!-- Email -->
                            <RowDefinition Height="Auto"/>
                            <!-- Perfil -->
                            <RowDefinition Height="Auto"/>
                            <!-- Senha -->
                            <RowDefinition Height="Auto"/>
                            <!-- Confirmar Senha -->
                            <RowDefinition Height="Auto"/>
                            <!-- Status -->
                        </Grid.RowDefinitions>

                        <!-- Linha 1: Nome -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Nome Completo" FontWeight="Bold" Foreground="#555"/>
                            <TextBox x:Name="NomeTextBox"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,5,0,0"
                                Padding="8,6"
                                MinHeight="44"
                                materialDesign:HintAssist.Hint="Nome completo do usuário"
                                FontSize="14"
                                VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Linha 2: Email -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Email" FontWeight="Bold" Foreground="#555"/>
                            <TextBox x:Name="EmailTextBox"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                Margin="0,5,0,0"
                                Padding="8,6"
                                MinHeight="44"
                                materialDesign:HintAssist.Hint="email@exemplo.com"
                                FontSize="14"
                                VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- Linha 3: Perfil -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Perfil de Acesso" FontWeight="Bold" Foreground="#555"/>
                            <ComboBox x:Name="PerfilComboBox"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,5,0,0"
                                  Padding="8,6"
                                  MinHeight="44"
                                  FontSize="14"
                                  VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Usuário" IsSelected="True"/>
                                <ComboBoxItem Content="Técnico"/>
                                <ComboBoxItem Content="Admin"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Linha 4: Senha -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,15" x:Name="SenhaStackPanel">
                            <TextBlock Text="Senha" FontWeight="Bold" Foreground="#555"/>
                            <PasswordBox x:Name="SenhaPasswordBox"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Margin="0,5,0,0"
                                     Padding="8,6"
                                     MinHeight="44"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     materialDesign:HintAssist.Hint="Digite a senha"/>
                        </StackPanel>

                        <!-- Linha 5: Confirmar Senha -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,15" x:Name="ConfirmarSenhaStackPanel">
                            <TextBlock Text="Confirmar Senha" FontWeight="Bold" Foreground="#555"/>
                            <PasswordBox x:Name="ConfirmarSenhaPasswordBox"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Margin="0,5,0,0"
                                     Padding="8,6"
                                     MinHeight="44"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     materialDesign:HintAssist.Hint="Confirme a senha"/>
                        </StackPanel>

                        <!-- Linha 6: Status -->
                        <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,10,0,0">
                            <CheckBox x:Name="AtivoCheckBox"
                                  Content="Usuário Ativo"
                                  FontWeight="SemiBold"
                                  IsChecked="True"
                                  Foreground="#555"/>
                        </StackPanel>
                    </Grid>

                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
                    <Button Content="Cancelar"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderBrush="#999"
                        Foreground="#555"
                        Width="100"
                        Height="40"
                        Click="FecharModal_Click"/>

                    <!-- Botão Alterar Senha (só aparece na edição) -->
                     <Button x:Name="AlterarSenhaButton"
                        Content="Alterar Senha"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderBrush="#4CAF50"
                        Foreground="#4CAF50"
                        Width="120"
                        Height="40"
                        Click="AlterarSenha_Click"
                        Visibility="Collapsed"/>

                    <Button Content="Salvar"
                        Background="#2979FF"
                        Foreground="White"
                        Width="100"
                        Height="38"
                        Click="SalvarUsuario_Click"
                        x:Name="SalvarUsuarioButton"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>